<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/gradient_background">

    <ImageView
        android:id="@+id/moviePoster"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"
        android:background="@color/dark_gray"
        android:elevation="4dp"
        app:cornerRadius="12dp"/>

    <TextView
        android:id="@+id/movieTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        tools:text="Movie Title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/usernameText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textColor="@color/yellow_primary"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
            tools:text="ReviewerUsername" />

        <TextView
            android:id="@+id/ratingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/yellow_primary"
            android:background="@drawable/rating_background"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            tools:text="⭐ 8/10" />
    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/dark_surface"
        app:cardCornerRadius="16dp"
        app:strokeColor="#30FFD700"
        app:strokeWidth="1dp"
        app:cardElevation="2dp">

        <TextView
            android:id="@+id/reviewText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:lineSpacingExtra="4sp"
            android:textColor="@color/light_gray"
            android:padding="20dp"
            tools:text="This is a long review text that will now be properly displayed with scrolling capability. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam euismod, nisl eget aliquam ultricies, nunc nisl aliquet nunc, quis aliquam nisl nunc eu nisl." />
    </com.google.android.material.card.MaterialCardView>

    <!-- Like/Dislike Buttons - Cleaner design but same functionality -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/likeButton"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_thumb_up"
            android:background="@drawable/button_reaction"
            android:scaleType="centerInside"
            android:padding="16dp"
            app:tint="@drawable/button_like_selector"/>

        <TextView
            android:id="@+id/likeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="24dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            tools:text="0" />

        <ImageButton
            android:id="@+id/dislikeButton"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_thumb_down"
            android:background="@drawable/button_reaction"
            android:scaleType="centerInside"
            android:padding="16dp"
            app:tint="@drawable/button_dislike_selector"/>

        <TextView
            android:id="@+id/dislikeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            tools:text="0" />
    </LinearLayout>
</LinearLayout>