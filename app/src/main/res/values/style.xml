<resources>
    <style name="CircleShapeAppearance" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@android:color/transparent</item>
        <item name="searchHintIcon">@null</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="android:background">@color/dark_surface</item>
        <!-- Add these to ensure all text is white -->
        <item name="android:editTextColor">@color/text_primary</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:popupTheme">@style/SpinnerPopupStyle</item>
    </style>

    <style name="SpinnerPopupStyle" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:background">@color/dark_surface</item>
    </style>
    <style name="WhiteSearchView" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:editTextColor">@color/light_gray</item>
        <item name="searchHintIcon">@null</item>
    </style>
</resources>